header
  // mShadowed(1.5, $mDropShadowCardColor)

  background-color: $backgroundDarkColor
  display: table
  color: $textColor2
  width: 100%
  z-index: 1
  position: relative

  // &:after
  //   content: 'DRAFT - SUBJECT TO REVISION'
  //   position: absolute
  //   text-align: center
  //   left: 50%
  //   transform: translateX(-50%)
  //   top: 68px
