@require 'astley.js/src/css/inputs/buttons'

button
.button
  border-radius: 2px !important
  border: 1px solid $buttonBorderColor !important
  top: 0 !important
  box-shadow: none !important
  background: transparent !important
  font-weight: 300
  letter-spacing: .175rem
  line-height: 100%
  text-align: center

  &:hover:not(:disabled)
  &:focus:not(:disabled)
    border-color: $highlightDarkColor !important


