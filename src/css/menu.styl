#menu
  width: auto
  position: absolute
  top: 0
  z-index: 1
  height: auto
  padding: .875rem 2.5rem
  left: 50%
  transform: translateX(-50%)
  background-color: transparent

  ul
    margin-bottom: 0
    display: flex
    flex-direction: row

    li
      cursor: pointer
      list-style-type: none
      height: $elementHeight
      line-height: 2em
      margin: 0 1rem
      color: $textColor2

      &:hover
        color: $accentColor1
        transition: color $transitionFast ease-in-out

