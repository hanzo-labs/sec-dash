readonly.input.input.input
  input
    border-bottom: 0
    color: $textColor2

  &.link
    input
      cursor: pointer
      color: $accentColor1

.input.input.input
  &:last-child:first-child
    margin-bottom: 0

  &.hideable
    outline: none

    input
    select
    textarea
      opacity: 0
      pointer-events: none
      transition: all $transitionFast linear

    &:after
      content: ''
      background-image: url(/img/hide-eye.svg)
      display: block
      position: absolute
      width: 1rem
      height: 1rem
      right: 1rem
      top: 50%
      transform: translateY(-50%)

    &:hover
    &:focus
      input
      select
      textarea
        opacity: 1
        pointer-events: auto

      &:after
        background-image: url(/img/show-eye.svg)

  .label
    color: $placeholderColor1
    transition: all $transitionFast linear

  input
  select
  textarea
    color: $textColor2
    border-color: $textDarkColor !important

    &:-moz-placeholder
      color: $textDarkColor

    &::-moz-placeholder
      color: $textDarkColor

    &:-ms-input-placeholder
      color: $textDarkColor

    &::-webkit-input-placeholder
      color: $textDarkColor

    &::placeholder
      color: $textDarkColor

  .select-indicator
    color: $textColor2
    top: 50%

switch.input.input.input
  display: flex
  align-items: center

  input
    display: none

  .switch
    height: 1.5em
    width: 2.5em
    margin-top: .325em
    margin-right: 8px
    display: block
    float: left
    background-color: $backgroundColor2
    box-shadow: inset 0 1px 3px $dropShadowColor1
    transition: all $transitionFast ease-in-out
    cursor: pointer

    .switch-slider
      width: 1.125em
      height: 1.125em
      position: relative
      top: .1875em
      left: .1875em
      background-color: $backgroundColor1
      box-shadow: 0 2px 5px $dropShadowColor1
      transition: all $transitionFast ease-in-out

  input:checked + .switch
    background-color: $accentColor2

    .switch-slider
      left: 1.1875em

  .label.label.label.label
    display: block
    position: relative
    top: 0
    left: 0
    font-size: 1rem

checkbox
  display: table

  input
    display: none

  label
    position: relative
    display: inline-block

    &:before
      content:''
      -webkit-appearance: none
      background-color: transparent
      border: 3px solid $checkboxBorderColor
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), inset 0px -15px 10px -12px rgba(0, 0, 0, 0.05)
      padding: 10px
      display: inline-block
      position: relative
      vertical-align: middle
      cursor: pointer
      margin-right: 5px
      border-radius: 2px

  :checked + label:before
    border-color: $checkboxCheckedBackgroundColor
    background-color: $checkboxCheckedBackgroundColor

  :checked + label:after
    content: ''
    display: block
    position: absolute
    top: 4px
    left: 10px
    width: 6px
    height: 14px
    border: solid $checkboxCheckedForegroundColor
    border-width: 0 2px 2px 0
    transform: rotate(45deg)

